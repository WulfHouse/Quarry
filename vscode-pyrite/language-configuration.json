{
  "comments": {
    "lineComment": "#",
    "blockComment": ["\"\"\"", "\"\"\""]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fn|if|elif|else|while|for|match|struct|enum|trait|impl|defer|with|unsafe).*:\\s*$",
    "decreaseIndentPattern": "^\\s*(elif|else).*:\\s*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*#.*region",
      "end": "^\\s*#.*endregion"
    }
  }
}

