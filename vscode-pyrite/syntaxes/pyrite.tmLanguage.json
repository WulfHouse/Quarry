{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pyrite",
  "scopeName": "source.pyrite",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.pyrite",
          "match": "#.*$"
        },
        {
          "name": "comment.block.pyrite",
          "begin": "\"\"\"",
          "end": "\"\"\""
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pyrite",
          "match": "\\b(if|elif|else|while|for|in|match|break|continue|return|defer|with|try)\\b"
        },
        {
          "name": "keyword.declaration.pyrite",
          "match": "\\b(fn|let|var|const|struct|enum|trait|impl|extern|unsafe)\\b"
        },
        {
          "name": "keyword.other.pyrite",
          "match": "\\b(and|or|not|as|mut)\\b"
        },
        {
          "name": "constant.language.pyrite",
          "match": "\\b(true|false|None)\\b"
        },
        {
          "name": "storage.modifier.pyrite",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.pyrite",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pyrite",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        },
        {
          "name": "string.quoted.single.pyrite",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.pyrite",
              "match": "\\\\(n|t|r|\\\\|')"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.pyrite",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.pyrite",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.pyrite",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.pyrite",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.pyrite",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.pyrite",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.definition.pyrite",
          "match": "(?<=fn\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.pyrite",
          "match": "\\b(int|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|str|char|void)\\b"
        },
        {
          "name": "storage.type.pyrite",
          "match": "\\b(String|List|Map|Set|Optional|Result)\\b"
        },
        {
          "name": "entity.name.type.pyrite",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.pyrite",
          "match": "(==|!=|<|<=|>|>=)"
        },
        {
          "name": "keyword.operator.arithmetic.pyrite",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.pyrite",
          "match": "="
        },
        {
          "name": "keyword.operator.reference.pyrite",
          "match": "&(mut\\s+)?"
        },
        {
          "name": "keyword.operator.dereference.pyrite",
          "match": "\\*"
        },
        {
          "name": "keyword.operator.arrow.pyrite",
          "match": "->"
        }
      ]
    }
  }
}

